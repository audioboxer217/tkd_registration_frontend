  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port",
        "5001"
      ],
      "jinja": true,
      "justMyCode": true
    },
  ]
}